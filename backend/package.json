{
  "name": "video-call-app",
  "version": "2.0.0",
  "description": "Full-featured WebRTC Video Call App with Auth, Rooms, and Chat",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "build": "cd ../frontend && npm install && npm run build && cd ../backend && node build.js",
    "copy": "node build.js",
    "db:init": "psql -U postgres -d videocall -f schema.sql"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "pg": "^8.11.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "dotenv": "^16.0.0",
    "cors": "^2.8.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
